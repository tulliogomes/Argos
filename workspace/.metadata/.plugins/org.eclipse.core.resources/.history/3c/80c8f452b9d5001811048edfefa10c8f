
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://xmlns.jcp.org/jsf/html"
	xmlns:f="http://xmlns.jcp.org/jsf/core"
	xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
	xmlns:p="http://primefaces.org/ui">

<h:head>
	<title>Usuários Cadastrados</title>
</h:head>
<f:metadata>
	<f:event type="preRenderView" listener="#{usuarioBean.listarUsuarios}" />
</f:metadata>
<h:body>
	<ui:composition template="../template/template.xhtml">
		<ui:define name="ttitle">Acervo da Biblioteca</ui:define>
		<ui:define name="tbody">
			<h:form id="formLivros">
				<h:messages errorStyle="color:red" infoStyle="color:blue"
					layout="table" />
				<p:tabView>
					<p:tab title="Usuários Cadastrados">
						<h:dataTable var="usuario" value="#{usuarioBean.usuarios}"
							styleClass="table table-striped table-hover">
							<h:column>
								<f:facet name="header">Matricula</f:facet>
								<h:outputText value="#{usuario.matricula}"
									rendered="#{usuario.matricula != loginBean.usuarioLogado.matricula}">
								</h:outputText>
							</h:column>

							<h:column>
								<f:facet name="header">Nome</f:facet>
								<h:outputText value="#{usuario.nome}"
									rendered="#{usuario.matricula != loginBean.usuarioLogado.matricula}" />
							</h:column>

							<h:column>
								<f:facet name="header">Telefone</f:facet>
								<h:outputText value="#{usuario.fone}"
									rendered="#{usuario.matricula != loginBean.usuarioLogado.matricula}"></h:outputText>
							</h:column>
							<h:column>
								<f:facet name="header">Email</f:facet>
								<h:outputText value="#{usuario.email}"
									rendered="#{usuario.matricula != loginBean.usuarioLogado.matricula}"></h:outputText>
							</h:column>
							<h:column>
								<f:facet name="header">Perfil</f:facet>
								<h:outputText value="#{usuario.perfil}"
									rendered="#{usuario.matricula != loginBean.usuarioLogado.matricula}"></h:outputText>
							</h:column>
							<h:column>
								<f:facet name="header">Aniversário</f:facet>
								<h:outputText value="#{usuario.dataAniversario}"
									rendered="#{usuario.matricula != loginBean.usuarioLogado.matricula}">
									<f:convertDateTime dateStyle="medium" />
								</h:outputText>
							</h:column>
							<h:column>
								<f:facet name="header">Ações disponíveis</f:facet>
								
								<h:commandLink action="#{usuarioBean.mudarStatus(usuario)}"
									           value="" 
									           style="width:30%; 
									           color:green; 
									           padding:10px"
									           rendered="#{usuario.matricula != loginBean.usuarioLogado.matricula and not usuario.status}">
								              <i class="glyphicon glyphicon-thumbs-up"></i>
								</h:commandLink>
								
								
								<h:commandLink action="#{usuarioBean.mudarStatus(usuario)}"
									           value="" 
									           style="width:35%; 
									           color:red; 
									           padding:10px"
									           rendered="#{usuario.matricula != loginBean.usuarioLogado.matricula and usuario.status}">
								               <i class="glyphicon glyphicon-thumbs-down"></i>
								</h:commandLink>
								
								
								
								<h:commandLink action="#{usuarioBean.editar(usuario)}"
									           value="" 
									           style="width:30%; 
									           color:orange; 
									           padding:10px"
									           rendered="#{usuario.matricula != loginBean.usuarioLogado.matricula}">
									           <i class="glyphicon glyphicon-edit"></i> 
								</h:commandLink>
								
								
								<h:commandLink rendered="#{usuario.matricula != loginBean.usuarioLogado.matricula and usuarioBean.temEmprestimosAtivos(usuario) == true and usuario.status == false}"
                                               action="#{usuarioBean.excluir(usuario)}"
                                               >
                                            <i class="glyphicon glyphicon-trash"></i> 
                                </h:commandLink>
								
							</h:column>
						</h:dataTable>
					</p:tab>
				</p:tabView>
			</h:form>
		</ui:define>
	</ui:composition>
</h:body>
