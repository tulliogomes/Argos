								<p:outputLabel for="matricula" 
								               value="Matrícula "
									           style="margin-top:5%" />
								  <p:inputText id="matricula" 
								               required="true"
									           requiredMessage="Informe a matrícula"
								     	       value="#{usuarioBean.matricula}" 
									           maxlength="11">
							  <f:convertNumber integerOnly="true" 
						                       maxFractionDigits="0" />
								</p:inputText>
								<p:message for="matricula" 
